{
  "name": "canary",
  "version": "0.1.0",
  "description": "Production-ready MCP server with OAuth, LLM, and Docker",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "canary": "./dist/index.js"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "dev:stdio": "NODE_ENV=development MCP_DEV_SKIP_AUTH=true tsx src/index.ts",
    "dev:http": "NODE_ENV=development MCP_MODE=streamable_http HTTP_PORT=3020 MCP_DEV_SKIP_AUTH=true tsx src/index.ts",
    "dev:oauth": "NODE_ENV=development MCP_MODE=streamable_http HTTP_PORT=3020 tsx --env-file=.env.oauth src/index.ts",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:system": "HTTP_PORT=3020 HTTP_TEST_PORT=3021 vitest run --config vitest.system.config.ts",
    "test:system:stdio": "TEST_ENV=stdio npm run test:system",
    "test:system:http": "TEST_ENV=express npm run test:system",
    "test:system:ci": "TEST_ENV=express:ci HTTP_PORT=3020 HTTP_TEST_PORT=3021 npm run test:system",
    "test:ci": "npm run test:unit && npm run test:system:ci",
    "validate": "npx vibe-validate validate",
    "pre-commit": "npx vibe-validate pre-commit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "keywords": [
    "mcp",
    "typescript",
    "server"
  ],
  "author": "Jeff Dutton",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@mcp-typescript-simple/config": "^0.9.0-rc.9",
    "@mcp-typescript-simple/observability": "^0.9.0-rc.9",
    "@mcp-typescript-simple/server": "^0.9.0-rc.9",
    "@mcp-typescript-simple/tools": "^0.9.0-rc.9",
    "@mcp-typescript-simple/http-server": "^0.9.0-rc.9",
    "@mcp-typescript-simple/auth": "^0.9.0-rc.9",
    "@mcp-typescript-simple/tools-llm": "^0.9.0-rc.9",
    "@mcp-typescript-simple/example-tools-basic": "^0.9.0-rc.9",
    "@mcp-typescript-simple/example-tools-llm": "^0.9.0-rc.9",
    "@anthropic-ai/sdk": "^0.63.0",
    "openai": "^5.21.0",
    "@google/generative-ai": "^0.24.1",
    "ioredis": "^5.3.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.56.0",
    "pino-pretty": "^13.1.1",
    "pino-opentelemetry-transport": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@mcp-typescript-simple/testing": "^0.9.0-rc.9",
    "@vibe-validate/cli": "^0.16.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "axios": "^1.7.9",
    "oauth2-mock-server": "^8.1.0",
    "husky": "^9.1.7",
    "eslint": "^9.35.0",
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-security": "^3.0.1"
  }
}
